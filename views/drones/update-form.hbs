<h2>Update the drone</h2>

<form action='/drones/{{_id}}/edit' method='post'>

  <label for='name'>Name</label>
  <input type='text' name='name' id='name' value='{{name}}'/>

  <label for='propellers'>Propellers</label>
  <input type='number' name='propellers' id='propellers' value='{{propellers}}'/>


  <label for='speed'>Speed</label>
  <input type='number' name='maxSpeed' id='speed' value='{{maxSpeed}}'/>

  <button type='submit'>Update drones</button>
  </hr>
</form>
